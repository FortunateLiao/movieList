
<view class="container">
    <scroll-view class="page-container">
        <view class="list-container" style="width:{{windowWidth}}px;">
            <view wx:for="{{listArr}}" wx:key="{{item}}" style="z-index:{{movieData[item].zIndex}};" class="item-container" animation="{{movieData[item].animationData}}"  bindtouchstart="touchStart" bindtouchmove="touchMove" bindtouchend="touchEnd">
                <view class="pic-box">
                    <image class="pic" mode="scaleToFill" src="{{movieData[item].picUrl}}"></image>
                    <view class="mask"></view>
                    <view class="text-box">
                        <text class="cn-name">{{movieData[item].name}}</text>
                        <view class="score-box">
                            <text class="score-name">豆瓣评分：{{listArr.length}}</text>
                            <text class="score">{{movieData[item].score}}</text>
                        </view>
                    </view>
                </view>

            </view>
        </view>
        <view class="buttons">
            <view class="round-container">
                <view class="cross" bindtap="onUnlike">
                    <image class="icon cross-icon" src="../../icon/cross.png"></image>
                </view>
            </view>
            <view class="round-container round-big">
                <view bindtap="toUserList" class="userinfo">
                    <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
                </view>
            </view>
            <view class="round-container">
                <view class="heart" bindtap="onLike">
                    <image class="icon heart-icon" src="../../icon/heart_big.png"></image>
                </view>
            </view>
        </view>
    </scroll-view>
</view>
